{% extends 'base.html.twig' %}

{% block title %}Friends - {% endblock %}

{% block body %}
    <h1 class="h3 p-3">Friends</h1>
        {% if friends.count != 0 %}
            <button class="btn btn-info float-right mb-3" data-toggle="modal" data-target="#new-frn-form"><i class="fas fa-user-plus"></i></button>
            <table class="table table-sm table-hover mb-5">
                {% for friend in friends %}
                    {{ include('friends/_friendRow.html.twig', {friend: friend}) }}
                {% endfor %}
            </table>
        {% else %}
            <p>You don't have any friends yet</p>
            <button class="btn btn-info" data-toggle="modal" data-target="#new-frn-form">Add friends</button>
        {% endif %}

    <h2 class="h5 p-3">Friend requests</h2>
    <table class="table table-sm table-hover">
        {% if requests.count == 0 %}
