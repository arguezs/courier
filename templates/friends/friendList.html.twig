        {% else %}
            {% for request in requests %}
                {{ include('friends/_friendPetition.html.twig', {request: request}) }}
            {% endfor %}
        {% endif %}
    </table>

    {{ include('_formModal.html.twig', {
        formId: 'new-frn-form',
        form: newFriendForm,
        formTitle: 'Add new friend'
    }) }}
{% endblock %}